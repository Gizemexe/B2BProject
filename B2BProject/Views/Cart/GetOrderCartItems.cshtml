@using EcommerceProject2.Models
@model IEnumerable<Order_Cart_Table>

<html>
<head>
    <title>My Shopping Cart</title>
    
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <style>

        body {
            background-color: #ffffff;
        }

        .custom-heading {
            font-size: 36px;
            font-family: 'Georgia', 'Times New Roman', serif;
            font-weight: bold;
            color: #333;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2); /* Hafif gölge efekti */
            margin-top: 20px;
        }

        .custom-table {
            background-color: #D1C4E9;
            border: 5px solid #000; /* Dış çizgi kalınlığı */
            border-radius: 20px;
            width: 100%;
            text-align: center;
            overflow: hidden;
            margin-bottom: 20px; /* Alt boşluk */
            margin-top: 12px;
        }

            .custom-table th {
                font-size: 20px; /* Yazı boyutu */
                text-align: center; /* İçeriklerin ortalanması */
                padding: 10px; /* Hücre içi boşluk */
                border: 1px solid #333;
                vertical-align: middle;
            }

            .custom-table td {
                font-size: 16px; /* Yazı boyutu */
                text-align: center; /* İçeriklerin ortalanması */
                padding: 30px; 
                border: 3px solid #333;
                vertical-align: middle; /* Dikey ortalama */
            }

            .custom-table img {
                display: block;
                margin-left: auto;
                margin-right: auto;
            }

        .amount {
            font-size: 24px; /* Yazı boyutu */
            line-height: 32px;
        }

        .cart-table img {
            width: 100px;
            height: auto;
        }

        .total-price, .discounted-total {
            font-size: 20px;
            font-weight: bold;
        }
        ö
        .coupon-form {
            margin-bottom: 20px;
        }

            .coupon-form .form-control {
                display: inline-block;
                width: auto;
            }

        .order-buttons {
            display: flex;
            justify-content: flex-end;
            margin-top: 20px;
        }

            .order-buttons form {
                margin-left: 10px;
            }

        .pricing-table-container {
            display: flex;
            justify-content: flex-end;
            align-items: flex-start;
            padding: 20px;
        }

        .pricing-table {
            background-color: #D1C4E9;
            border: 5px solid #000;
            border-radius: 20px;
            width: auto;
            overflow: hidden;
            margin-left: 20px; /* Sol boşluk */
        }

            .pricing-table th,
            .pricing-table td {
                padding: 10px;
                border: 1px solid #333;
                text-align: right;
            }

        .text-right {
            text-align: right;
        }

        .total-price,
        .discounted-total {
            font-weight: bold;
        }

        .total-price {
            background-color: #f9f9f9;
        }

        .discounted-total {
            background-color: #e9e9e9;
        }

        .price-value {
            font-weight: bold;
            font-size: 1.5em;
        }

        .discount-value {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="custom-heading">My Shopping Cart</h2>
        <p>Customer Username: @Session["Customer_Email"]</p>

        <form id="couponForm" action="@Url.Action("ApplyCoupon", "Cart")" method="post" class="coupon-form form-inline">
            <div class="form-group mx-sm-3 mb-2">
                <label for="couponCode" class="sr-only">Coupon Code</label>
                <input type="text" id="couponCode" name="couponCode" class="form-control" placeholder="Enter your coupon code">
            </div>
            <button type="submit" class="btn btn-primary mb-2">Apply Coupon</button>
        </form>

        <div class="d-flex">

            <table style="width:70%; float:left;" border="1" class="table table-bordered cart-table custom-table">

                <thead class="thead-light">
                    <tr>
                        <th>Product Image</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Amount</th>
                        <th>Size</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img class="card-img-top" src="../@item.Products.image" alt="@item.Products.Product_name" height="150"></td>
                            <td>@(item.Products?.Product_name)</td>
                            <td>@item.Order_Total</td>
                            <td>
                                <div style="display: flex; justify-content: space-between;">
                                    <form method="post" action="@Url.Action("ChangeAmount", "Cart")">
                                        @Html.Hidden("orderCartId", item.Order_Cart_id)
                                        @Html.Hidden("productId", item.Products.Product_id)
                                        <input type="hidden" name="changeAmount" value="decrease" />
                                        <button type="submit" class="btn btn-secondary">-</button>
                                    </form>

                                    <span class="amount">@item.Amount</span>

                                    <form method="post" action="@Url.Action("ChangeAmount", "Cart")">
                                        @Html.Hidden("orderCartId", item.Order_Cart_id)
                                        @Html.Hidden("productId", item.Products.Product_id)
                                        <input type="hidden" name="changeAmount" value="increase" />
                                        <button type="submit" class="btn btn-secondary">+</button>
                                    </form>
                                </div>
                            </td>
                            <td>@item.size</td>
                            <td>
                                @using (Html.BeginForm("RemoveFromOrderCart", "Cart", FormMethod.Post))
                                {
                                    @Html.Hidden("orderCartId", item.Order_Cart_id)
                                    <button type="submit" class="btn btn-danger">Remove</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


            <div class="pricing-table-container">

                <table style="width:20%; float:right;" border="1" class="pricing-table">
                    <tfoot>
                        <tr>
                            <th colspan="5" class="text-right total-price">Total Price:</th>
                            <td class="price-value">@ViewBag.TotalPrice</td>
                        </tr>
                        <tr>
                            <th colspan="5" class="text-right discounted-total">Discounted Total:</th>
                            <td class="discount-value">@TempData["DiscountedTotal"] @TempData["CouponError"]</td>
                        </tr>
                        <tr>
                            <th colspan="5" class="text-right total-price">Shipping Fee:</th>
                            <td class="price-value">100</td>
                        </tr>
                    </tfoot>

                </table>

            </div>
        </div>


        <br />
        <div class="d">
            <form method="post" action="@Url.Action("BuyNow", "Orders")">
                <button type="submit" class="btn btn-warning" style="margin-left:965px; font-size:18px; width:120px; height:40px"> Order Now </button>
            </form>
            <br />
            <form action="@Url.Action("Index","Home")">
                <button type="submit" class="btn btn-info" style="font-size:18px; width:200px; height:40px">Continue Shopping</button>
            </form>
        </div>

    </div>
</body>
</html>
