@model IEnumerable<B2BProject.Models.Orders>
@{
    ViewBag.Title = "MyOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MyOrders</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Order No</th>
                <th>Order Date</th>
                <th>Total</th>
                <th>Status</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Order_id</td>
                    <td>@order.Date</td>
                    <td>@order.Total</td>
                    <td>@order.Order_status</td>
                    <td>
                        <a href="@Url.Action("OrderDetails", "Orders", new { orderId = order.Order_id })">View Details</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You don't have any orders yet.</p>
}


