
@model B2BProject.Models.Coupons
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Coupons</title>
    <style>
        Body {
            font-family: Calibri, Helvetica, sans-serif;
            background-color: #ffffff;
        }
S

        button {
            background-color: #4B0082;
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }


        form {
            border: 4px solid #000203;
        }

        input[type=text], input[type=password] {
            width: 100%;
            margin: 8px 0;
            padding: 12px 20px;
            display: inline-block;
            border: 2px solid black;
            box-sizing: border-box;
            border-radius: 15px;
            overflow: hidden;
        }

        button:hover {
            opacity: 0.7;
        }



        .tbl {
            margin-right: 150px;
        }

            .tbl tr {
                padding-bottom: 8px;
            }

        .container {
            padding: 25px;
            background-color: #AFEEEE;
        }
    </style>
</head>
<body>
    <br />
    <br />
    <br />
    @using (Html.BeginForm("AddCoupons", "Seller", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <form>
            <div style="margin-bottom:295px">
                <h1 style="text-align:center"> Add Coupons </h1>
                <br>
                <center>
                    <table class="tbl">
                        <tr>
                            <th style="width:40%">
                                <label style="font-size:16px">Coupon Code : </label>
                            </th>
                            <td>
                                @Html.TextBoxFor(x => x.Coupon_Code, new { @class = "form", @placeholder = "Coupons Code" })
                            </td>
                            <td>
                                @Html.ValidationMessageFor(x => x.Coupon_Code, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <th>
                                <label style="font-size:16px">Product Code :</label>
                            </th>
                            <td>
                                @Html.TextBox("productCode", null, new { @class = "form", @placeholder = "Product Code" })
                            </td>
                        </tr>
                        <tr>
                            <th>
                                <label style="font-size:16px">Coupon Discount :</label>
                            </th>
                            <td>
                                @Html.TextBoxFor(x => x.Discount, new { @class = "form", @placeholder = "Write here the coupon discount Amount" })
                            </td>
                        </tr>
                        <tr>
                            <th>
                                <label style="font-size:16px">End Date :</label>
                            </th>
                            <td>
                                @Html.TextBoxFor(x => x.End_date, "{0:yyyy-MM-dd}", new { @class = "form", @type = "date", @placeholder = "End Date" })
                                <br />
                            </td>
                        </tr>
                      
                        <tr>
                            <th>
                                <label style="font-size:16px">Is Active : </label>
                            </th>
                            <td>
                                @Html.DropDownListFor(x => x.IsActive, new SelectList(new List<SelectListItem>
                                                {
                                                    new SelectListItem { Text = "True", Value = "true" },
                                                    new SelectListItem { Text = "False", Value = "false" }
                                                }, "Value", "Text"), "--Select--", new { @class = "form-control" })
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td><br />
                                <input type="submit" id="button" value="Add" class="btn btn-primary" />
                            </td>
                        </tr>
                    </table>
                </center>
            </div>
        </form>
    }
</body>
</html>



